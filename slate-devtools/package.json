{
  "name": "slate-devtools",
  "version": "0.0.002",
  "peerDependencies": {
    "react-dom": "^17.0.0",
    "react": "^17.0.0",
    "jotai": "^0.15.0"
  },
  "devDependencies": {
    "@popperjs/core": "^2.8.4",
    "@stitches/react": "0.1.0-canary.15",
    "clone": "^2.1.2",
    "nanoid": "^3.1.20",
    "re-resizable": "^6.9.0",
    "react-popper": "^2.2.4",
    "slate": "^0.59.0",
    "slate-react": "^0.59.0",
    "use-deep-compare-effect": "^1.6.1"
  },
  "files": [
    "dist"
  ],
  "types": "./dist/lib.d.ts",
  "main": "./dist/slate-devtools.umd.js",
  "module": "./dist/slate-devtools.es.js",
  "exports": {
    ".": {
      "import": "./dist/slate-devtools.es.js",
      "require": "./dist/slate-devtools.umd.js"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,tsx,ts}": "eslint --cache --fix",
    "*.{js,css,md,tsx,ts}": "prettier --write"
  }
}
